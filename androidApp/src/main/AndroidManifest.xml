<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" tools:ignore="ScopedStorage" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Yole"
        android:supportsRtl="true"
        tools:targetApi="31">
        
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Yole">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
            <!-- Support text file viewing -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:mimeType="text/plain" />
                <data android:mimeType="text/markdown" />
                <data android:mimeType="text/x-markdown" />
                <data android:mimeType="application/json" />
                <data android:mimeType="text/csv" />
            </intent-filter>
            
            <!-- Support opening files from file managers -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:scheme="file" />
                <data android:mimeType="*/*" />
                <data android:host="*" />
                <data android:pathPattern=".*\\.md" />
                <data android:pathPattern=".*\\.markdown" />
                <data android:pathPattern=".*\\.txt" />
                <data android:pathPattern=".*\\.csv" />
                <data android:pathPattern=".*\\.json" />
                <data android:pathPattern=".*\\.yml" />
                <data android:pathPattern=".*\\.yaml" />
                <data android:pathPattern=".*\\.tex" />
                <data android:pathPattern=".*\\.org" />
                <data android:pathPattern=".*\\.adoc" />
                <data android:pathPattern=".*\\.asciidoc" />
                <data android:pathPattern=".*\\.wiki" />
                <data android:pathPattern=".*\\.zim" />
                <data android:pathPattern=".*\\.taskpaper" />
                <data android:pathPattern=".*\\.textile" />
                <data android:pathPattern=".*\\.creole" />
                <data android:pathPattern=".*\\.tid" />
                <data android:pathPattern=".*\\.ipynb" />
                <data android:pathPattern=".*\\.rmd" />
                <data android:pathPattern=".*\\.rmarkdown" />
                <data android:pathPattern=".*\\.rst" />
                <data android:pathPattern=".*\\.rest" />
            </intent-filter>
        </activity>
    </application>

</manifest>